<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-white shadow py-3">
    <div class="container-md">
      <%= link_to('Hao 教室', root_path, class: 'navbar-brand') %>
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <%= link_to('訂購紀錄', orders_path, class: 'nav-link') %>
        </li>
      </ul>
        <form class="d-flex">
          <% if user_signed_in? %>
            <%= link_to('登出', destroy_user_session_path, method: :delete, class: 'btn btn-outline-dark me-3') %>
            <%= link_to('管理後台', courses_path, class: 'btn btn-dark') if can?(:manage, Course) %>
          <% else %>
            <%= link_to('登入', new_user_session_path, class: 'btn btn-outline-dark me-3') %>
            <%= link_to('註冊', new_user_registration_path, class: 'btn btn-dark') %>
          <% end %>
        </form>
    </div>
  </nav>
</header>