<div class="row">
  <div class="col-md-12 pb-3">
    <hr/>
  </div>
</div>
<div class="row">
  <div class="col-md-2 pb-5"></div>
  <div class="col-md-8 pb-5">
    <div class="card shadow">
      <img src="https://picsum.photos/seed/<%= @course.title %>/800/600">
      <div class="card-body">
        <div class="course-title d-flex justify-content-between">
          <h5><%= @course.title %></h5>
          <h5><%= "$ #{@course.price.to_i}" %></h5>
        </div>
        <p class="card-text"><%= @course.description %></p>
        <div class="d-flex justify-content-between align-items-center">
          <small class="text-muted"><%= "By #{@course.user.name}" if @course.user.name.present? %></small>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-2 pb-5"></div>
</div>
<div class="row">
  <div class="col-md-12 pb-3 text-center">
    <%= link_to '返回首頁', root_path, class: 'btn btn-outline-dark' %>
  </div>
</div>