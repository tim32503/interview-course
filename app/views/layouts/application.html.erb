<!DOCTYPE html>
<html>
  <head>
    <title>Hao 教室</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="mb-5">
      <nav class="navbar navbar-light bg-light">
        <div class="container-md">
          <%= link_to('Hao 教室', root_path, class: 'navbar-brand') %>
            <form class="d-flex">
              <% if user_signed_in? %>
                <%= link_to('登出', destroy_user_session_path, method: :delete, class: 'btn btn-outline-dark me-3') %>
              <% else %>
                <%= link_to('登入', new_user_session_path, class: 'btn btn-outline-dark me-3') %>
                <%= link_to('註冊', new_user_registration_path, class: 'btn btn-dark') %>
              <% end %>
            </form>
        </div>
      </nav>
    </header>
    <main class="container-md">
      <%= yield %>
    </main>
  </body>
</html>
